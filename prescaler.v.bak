always @(posedge clkIn)
	if (counter < F_OSC/16)
		clkOut <= 4'b1111;
	else if (counter < F_OSC/8)
		clkOut <= 4'b0111;
	else if (counter < F_OSC/4)
		clkOut <= 4'b0011;
	else if
	else if (counter < F_OSC/2)
		clkOut <= 4'b0001;
	else if (counter < 3*F_OSC/4)
		clkOut <= 4'b0010;
	else
		clkOut <= 0;
*/
always @(posedge clkin)
	if (counter < (F_OSC-1))
		counter <= counter+1;
	else
		counter <= 0;
		
endmodule